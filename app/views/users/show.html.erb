<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <br>
        <br>
        <% if current_user.admin? %>
          status: admin
        <% else %>
          status: nomal
        <% end %>
      </h1>
    </section>
  </aside>
</div>
